<!DOCTYPE html>
<html>
<header>
  <title>BlogApp</title>
  <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= render 'posts/header' %>
</header>
<!-- flash messages -->
<% if notice %>
      <p class="notice"><%= notice %></p>
<% elsif alert %>
      <p class="alert"><%= alert %></p>
<% end %>
<body>
  <!-- flash messages -->
  <% if notice %>
        <p class="notice"><%= notice %></p>
  <% elsif alert %>
        <p class="alert"><%= alert %></p>
  <% end %>
<%= yield %>

</body>
<footer>
  <div id="footer">
  <p>&copy; 2013, My Ruby Blog - Sample Project</p>
</div>
</footer>
</html>
